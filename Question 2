Question 2 : Smart meter customer info

using System;

public class Question2
{
    public static void Main(string[] args)
    {

        Console.WriteLine("Enter the id of the customer: ");
        int id = Convert.ToInt32(Console.ReadLine());


        Console.WriteLine("Enter the name of the customer: ");
        string name = Console.ReadLine();


        Console.WriteLine("Enter the units consumed: ");
        int units = Convert.ToInt32(Console.ReadLine());


        Customer obj = new Customer(id, name, units);


        obj.BillDetails();
    }
}


class Customer
{
    public int CustomerId;
    public string CustomerName;
    public int UnitsConsumed;


    public Customer(int Id, string Name, int Units)
    {
        CustomerId = Id;
        CustomerName = Name;
        UnitsConsumed = Units;
    }


    public void BillDetails()
    {
        int bill = UnitsConsumed * 5;
    
        Console.WriteLine($"Customer: {CustomerName} (ID: {CustomerId})");
        Console.WriteLine("Units Consumed: " + UnitsConsumed);
        Console.WriteLine("Total electricity bill: $" + bill);
    }
}

